<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tv_place_title"
            android:id="@+id/tv_em_place_title"
            android:layout_weight="0.05"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/tv_em_name_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tv_name_title"
            android:id="@+id/tv_em_name_title"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tv_start_title"
            android:id="@+id/tv_em_start_title"
            android:layout_marginTop="51dp"
            android:layout_below="@+id/tv_em_place_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/tv_em_name_title"
            android:layout_alignEnd="@+id/tv_em_name_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tv_end_title"
            android:id="@+id/tv_em_end_title"
            android:layout_below="@+id/tv_em_start_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tv_description_title"
            android:id="@+id/tv_em_description_title"
            android:layout_below="@+id/tv_em_end_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="49dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_em_name_ui"
            android:layout_marginRight="41dp"
            android:layout_marginEnd="41dp"
            android:layout_alignBottom="@+id/tv_em_name_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_em_place_ui"
            android:layout_above="@+id/tv_em_start_title"
            android:layout_alignRight="@+id/tv_em_name_ui"
            android:layout_alignEnd="@+id/tv_em_name_ui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_em_start_ui"
            android:layout_alignTop="@+id/tv_em_start_title"
            android:layout_alignRight="@+id/tv_em_place_ui"
            android:layout_alignEnd="@+id/tv_em_place_ui"
            android:inputType="date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_em_end_ui"
            android:layout_above="@+id/tv_em_description_title"
            android:layout_alignRight="@+id/tv_em_start_ui"
            android:layout_alignEnd="@+id/tv_em_start_ui"
            android:inputType="date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tv_em_description_ui"
            android:layout_alignTop="@+id/tv_em_description_title"
            android:layout_alignRight="@+id/tv_em_end_ui"
            android:layout_alignEnd="@+id/tv_em_end_ui" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_em_edit"
        android:src="@drawable/add_icon"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:background="@color/gray"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>